<div class="row">
  <div class="six columns">
    <h2>Register</h2>
    <form action="/users" method="POST">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="user_first_name"><br />
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="user_last_name"><br />
      <label for="email">Email:</label>
      <input type="text" name="email" id="user_email"><br />
      <label for="password">Password:</label>
      <input type="password" name="password" id="user_password"><br />
      <label for="password_confirmation">Password Confirmation:</label>
      <input type="password" name="password_confirmation" id="user_password_confirmation"><br />
      <input type="submit" value="Register" id="user_register">
    </form>
  </div> <!-- end six columns -->
  <div class="six columns">
    <h1>Login</h1>
    <form action="/sessions" method='POST'>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="email">Email:</label>
      <input type="text" name="email"><br />
      <label for="password">Password:</label>
      <input type="password" name="password"><br />
      <!-- <label for="password_confirmation">Password confirmation:</label> -->
      <!-- <input type="password" name="password_confirmation"> -->
      <input type="submit" value="Login">
    </form>
  </div>
</div> <!-- end row -->
